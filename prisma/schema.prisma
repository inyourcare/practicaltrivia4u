// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "sqlite"
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model ContactInfo {
  id    Int     @id @default(autoincrement())
  name  String?
  kind  String?
  phone  String?
  address  String?
  address2  String?
  description  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}