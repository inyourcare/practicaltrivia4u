// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "sqlite"
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model ContactInfo {
  id          Int      @id @default(autoincrement())
  name        String?
  kind        String?
  phone       String?
  address     String?
  address2    String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BusinessInfo {
  id                    Int      @id @default(autoincrement())
  name                  String?
  bossName              String?
  buisinessRegistNumber String?
  phone                 String?
  worktime              String?
  address               String?
  partners              String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model WawaBranches {
  id          Int      @id @default(autoincrement())
  name        String
  englishName String   @unique
  lat         Float
  lng         Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id          Int      @id @default(autoincrement())
  tags        String
  category    String
  title       String
  description String
  image       String
  imageAlt    String
  contents    String
  author      String
  enable      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
